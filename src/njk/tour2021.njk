{% extends '_templates/base.njk' %}

{% block content %}
<article class="container">
  <h1>Queen's Tour Dates 2021</h1>
  <p><center>Dates are subject to change due to COVID-19</center></p>
</article>
<div class="container">
  <table class="table table-striped">
     <thead>
      <tr>
          <th>Date</th>
          <th>City</th>
          <th>Venue</th>
      </tr>
    </thead>
    <tbody>
      {% for show in queen.tour2021 %}
      <tr>
        <td>{{ show.date }}</td>
        <td>{{ show.city }}</td>
        <td>{{ show.venue }}</td>
      </tr> 
      {% endfor %}
    </tbody>
  </table>
</div>

{% endblock %}